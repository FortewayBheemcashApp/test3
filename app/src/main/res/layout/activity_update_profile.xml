<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile"
    android:background="@drawable/reset_password">
    <androidx.cardview.widget.CardView
        android:layout_width="120sp"
        android:layout_height="120sp"
        app:cardCornerRadius="60sp"
        android:layout_gravity="center"
        android:layout_marginTop="80sp"
        android:layout_centerHorizontal="true"
        >
    <ImageView
        android:id="@+id/updateImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:contentDescription="@string/todo"></ImageView>


    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/captureButton"
        android:layout_width="110sp"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="220sp"
        android:textSize="13sp"
        android:layout_alignLeft="@id/userName"
        android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
        android:text="Camera"
        android:onClick="capturePhoto"/>

    <Button
        android:id="@+id/pickButton"
        android:layout_width="110sp"
        android:layout_height="40sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="220sp"
        android:textSize="13sp"
        android:onClick="choosePhoto"
        android:layout_alignRight="@id/userName"
        android:drawableLeft="@drawable/ic_insert_photo_black_24dp"
        android:text="Gallery"
         />
    <EditText
        android:id="@+id/userName"
        android:layout_width="250sp"
        android:layout_height="35sp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:textSize="13.5sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/captureButton"
        android:hint="@string/enter_userName"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        />
    <ImageView
        android:id="@+id/userImage"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_toLeftOf="@id/email"
        android:layout_centerVertical="true"
        android:layout_below="@id/captureButton"
        android:layout_marginTop="15sp"
        app:srcCompat="@drawable/ic_person_outline_black_24dp"
        tools:ignore="VectorDrawableCompat"
        android:layout_toStartOf="@id/email"
        android:contentDescription="@string/todo" />
    <EditText
        android:id="@+id/email"
        android:layout_width="250sp"
        android:layout_height="35sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/userName"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:textSize="13.5sp"
        android:hint="@string/enter_email"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="250sp"
        android:layout_height="35sp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:textSize="13.5sp"
        android:hint="@string/enter_password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/emailImage"
        android:layout_width="25sp"
        android:layout_height="30sp"
        android:layout_toLeftOf="@id/userName"
        android:layout_below="@id/userImage"
        android:layout_marginTop="10sp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_mail_outline_black_24dp"
        tools:ignore="VectorDrawableCompat"
        android:layout_toStartOf="@id/userName"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/passwordImage"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_below="@id/emailImage"
        android:layout_centerVertical="true"
        android:layout_marginTop="15sp"
        android:layout_toStartOf="@id/password"
        android:layout_toLeftOf="@id/password"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/ic_lock_outline_black_24dp"
        tools:ignore="VectorDrawableCompat" />
    <ImageView
        android:id="@+id/againPasswordImage"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_below="@id/passwordImage"
        android:layout_centerVertical="true"
        android:layout_marginTop="15sp"
        android:layout_toStartOf="@id/againPassword"
        android:layout_toLeftOf="@id/againPassword"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/ic_lock_outline_black_24dp"
        tools:ignore="VectorDrawableCompat" />
    <EditText
        android:id="@+id/againPassword"
        android:layout_width="250sp"
        android:layout_height="35sp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:textSize="13.5sp"
        android:hint="@string/enter_password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/updateButton"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/againPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/update"
        android:textSize="13.5sp"
        android:textColor="@color/white"
        android:background="@drawable/edge_round"/>

    <Button
        android:id="@+id/menuButton"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:textSize="13.5sp"
        android:layout_marginRight="15sp"
        android:background="@drawable/ic_menu_black_24dp"
        android:layout_marginEnd="15sp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>