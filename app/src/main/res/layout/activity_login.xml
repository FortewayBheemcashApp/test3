<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/reset_password">


    <EditText
        android:id="@+id/userName"
        android:layout_width="250sp"
        android:layout_height="35sp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:textSize="13.5sp"
        android:hint="@string/enter_email"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/password"
        android:layout_width="250sp"
        android:layout_height="35sp"
        android:layout_below="@id/userName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:textSize="13.5sp"
        android:hint="@string/enter_password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/emailImage"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_toLeftOf="@id/userName"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_mail_outline_black_24dp"
        tools:ignore="VectorDrawableCompat"
        android:layout_toStartOf="@id/userName"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/passwordImage"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_below="@id/emailImage"
        android:layout_centerVertical="true"
        android:layout_marginTop="21dp"
        android:layout_toStartOf="@id/password"
        android:layout_toLeftOf="@id/password"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/ic_lock_outline_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/login"
        android:textSize="13.5sp"
        android:textColor="@color/white"
        android:background="@drawable/edge_round"/>
    <Button
        android:id="@+id/forgotButton"
        android:layout_width="200sp"
        android:layout_height="35sp"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="10sp"
        android:text="@string/forgot_password"
        android:textAlignment="viewStart"
        android:textSize="13.5sp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:gravity="start" />
    <Button
        android:id="@+id/signUpButton"
        android:layout_width="200sp"
        android:layout_height="35sp"
        android:layout_below="@id/forgotButton"
        android:layout_marginTop="5sp"
        android:text="New to bheemcash?Sign up"
        android:textAlignment="viewStart"
        android:textSize="13.5sp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:gravity="start" />

    <Button
        android:id="@+id/button3"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginRight="15sp"
        android:textSize="13.5sp"
        android:background="@drawable/ic_menu_black_24dp" />

</RelativeLayout>