<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaqsActivity"
    android:background="@drawable/reset_password">

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="100sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/faq_s"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/playButton"
        android:layout_below="@id/textView"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="100sp"
        android:background="@drawable/ic_play_circle_filled_black_24dp"
        android:onClick="playVideo"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:layout_toRightOf="@id/playButton"
        android:text="Watch Video"
        android:textSize="15sp"
        android:layout_marginLeft="5sp"
        android:layout_below="@id/textView"
        android:layout_marginTop="25sp"></TextView>
    <ListView
        android:id="@+id/faqList"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_below="@id/playButton"
        android:layout_height="match_parent"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp">


    </ListView>
</RelativeLayout>